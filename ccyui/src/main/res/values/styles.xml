<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CityPicker.NoActionBar" parent="BaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!--淡入淡出popupwindow -->
    <style name="popupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>




    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的大小-->
        <item name="android:textSize">14sp</item>
        <!--Tab字体的默认的颜色-->
        <item name="android:textColor">@color/dark_grey</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyTabLayoutStyle" parent="android:Widget">
        <!--tab的最大的宽度-->
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">@color/main</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">0dp</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
        <!--tab 选中时的颜色-->
        <item name="tabSelectedTextColor">@color/main</item>
        <item name="tabBackground">@drawable/tab_background</item>
    </style>






    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="MyOK">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3A97FD</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="MyTabLayoutStyle1" parent="android:Widget">
        <!--tab的最大的宽度-->
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">@color/main</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">1dp</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
        <!--tab 选中时的颜色-->
        <item name="tabSelectedTextColor">@color/main</item>

    </style>
    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialogStyle" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyItemArea">
        <item name="android:layout_marginBottom">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyItemTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <!--头部字体-->
<style name="main_top_tv">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">match_parent</item>
<item name="android:gravity">center</item>
<item name="android:textSize">20sp</item>
<item name="android:textColor">@color/dark_grey</item>
</style>

    <style name="MyOptionTv">
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/main</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>



<!--tab-->
    <style name="MyTabLayoutStyle2" parent="android:Widget">
        <!--tab的最大的宽度-->
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">@color/main</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">1dp</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
        <!--tab 选中时的颜色-->
        <item name="tabSelectedTextColor">@color/main</item>

    </style>
    <style name="MyTabLayoutStyle3" parent="android:Widget">
        <!--tab的最大的宽度-->
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">@color/main</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">2dp</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
        <item name="tabSelectedTextColor">@color/main</item>
        <!--tab 选中时的颜色-->

    </style>








</resources>
