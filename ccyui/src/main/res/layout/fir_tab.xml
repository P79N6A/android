<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
        android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tabll"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sou_topBar"
        android:background="@color/white">

        <TextView
            android:id="@+id/qh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_4"
            android:visibility="gone"
            android:src="@mipmap/leixing1"
            android:textSize="12sp"
            android:text="更多"
            android:textColor="@color/dark_grey"/>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/qh_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="综合"
                android:textColor="#ff3d01"
                android:textSize="12sp"/>



            <TextView
                android:id="@+id/sl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="销量"
                android:textColor="@color/darkgreyt"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/jies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="最新"
                android:textColor="@color/darkgreyt"
                android:textSize="12sp"/>
            <RelativeLayout
                android:id="@+id/juane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/juaneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="券额"
                    android:textColor="@color/darkgreyt"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/juaneIv"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/juaneTv"
                    android:src="@mipmap/san"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jiag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/jiagTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="到手价"
                    android:textColor="@color/darkgreyt"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/jiagIv"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/jiagTv"
                    android:src="@mipmap/san"/>
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>