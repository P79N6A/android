<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#b0cccccc"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/dialog"
        android:layout_width="wrap_content"
        android:id="@+id/set_dialog"

        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="客服电话"
            android:textSize="16sp"
            android:textColor="@color/dark_grey"
            android:gravity="center"
            android:background="@drawable/dialog_pw"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/dialogTel"
            android:text=""
            android:textColor="@color/dark_grey"
            android:gravity="center"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="工作时间内拨打"
            android:textSize="14sp"
            android:textColor="@color/main"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="（周一至周六8：00-18：00）"
            android:textSize="14sp"
            android:textColor="@color/main"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
                      android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="30dp">
            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_NO"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dialog_abolish"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:text="取   消"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                        android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_OK"
                    android:background="@drawable/dialog_confirm"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="拨   出"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>