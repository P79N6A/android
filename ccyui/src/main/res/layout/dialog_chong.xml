<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#b0cccccc"

    android:layout_height="match_parent">

    <LinearLayout

        android:background="@drawable/dialog"
        android:layout_width="300dp"
        android:id="@+id/set_dialog"

        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <!--订单编号-->
        <LinearLayout

            style="@style/MyItemArea"
            >

            <TextView
                style="@style/MyItemTv"
                android:textSize="17sp"

                android:text="订单编号：" />

            <TextView
                style="@style/MyItemTv"
                android:id="@+id/dialog_num"
                android:textSize="17sp"

                android:hint=""
                />
        </LinearLayout>
        <!--充值金额-->
        <LinearLayout

            style="@style/MyItemArea"
            >

            <TextView
                style="@style/MyItemTv"
                android:textSize="17sp"
                android:text="充值金额：" />

            <TextView
                style="@style/MyItemTv"
                android:id="@+id/dialog_Fnum"
                android:textSize="17sp"
                android:textColor="@color/my_item_red"
                />
        </LinearLayout>







    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="#E4E4E4" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="50dp">

            <Button
                android:layout_gravity="center"
                style="@style/MyOK"
                android:layout_weight="5"
                android:id="@+id/dialogC_NO"
                android:textSize="18sp"
                android:text="取消"
                />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#E4E4E4" />

            <Button
                android:layout_gravity="center"
                android:textSize="18sp"
                android:id="@+id/dialogC_OK"
                style="@style/MyOK"
                android:layout_weight="5"
                android:text="确定"
                />


        </LinearLayout>

    </LinearLayout>




</RelativeLayout>