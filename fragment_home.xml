<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/spend"
    android:orientation="vertical"
    >

    <include layout="@layout/search_tab_tv"  android:id="@+id/tab6"  />
    <com.baoyz.widget.PullRefreshLayout
        android:layout_below="@+id/tab6"
        android:layout_width="match_parent"
        android:id= "@+id/pullRefreshLayout"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appbar"
                android:theme="@style/AppTheme"
                app:elevation="0dp">
                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:layout_width="match_parent"
                    android:id="@+id/banner"
                    android:background="@color/white"
                    app:canLoop="true"
                    android:layout_height="100dp"
                    app:layout_scrollFlags="scroll"
                    android:layout_alignParentTop="true">

                </com.bigkoo.convenientbanner.ConvenientBanner>
                <com.example.ccy.ccyui.view.MyGridView
                    android:layout_width="match_parent"
                    android:id="@+id/myGv"
                    app:layout_scrollFlags="scroll"
                    android:numColumns="5"
                    android:layout_height="wrap_content">
                </com.example.ccy.ccyui.view.MyGridView>
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/baen"
                    app:layout_scrollFlags="scroll"
                    android:layout_height="@dimen/dp_2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/imgss"
                    app:layout_scrollFlags="scroll"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="5"
                            android:id="@+id/img1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/test1"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="5"
                            android:id="@+id/img2"
                            android:src="@mipmap/test2"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="5"
                            android:id="@+id/img3"
                            android:src="@mipmap/test3"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="5"
                            android:id="@+id/img4"
                            android:src="@mipmap/test4"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="5"
                            android:id="@+id/img5"
                            android:src="@mipmap/test5"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:paddingTop="1dp"
                    app:layout_scrollFlags="scroll"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/bean"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="5"
                        android:id="@+id/rel5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"

                            android:id="@+id/jkj"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="5"
                        android:id="@+id/rel6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"
                            android:id="@+id/shij"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:paddingTop="1dp"
                    app:layout_scrollFlags="scroll"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/bean"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="5"
                        android:id="@+id/rel7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"

                            android:id="@+id/jkj_7"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="5"
                        android:id="@+id/rel8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"
                            android:id="@+id/shij_8"
                            android:layout_height="match_parent" />

                    </RelativeLayout>



                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/baen"
                    app:layout_scrollFlags="scroll"
                    android:layout_height="@dimen/dp_4" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    app:layout_scrollFlags="scroll"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/dian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:text="限时折扣"
                        android:textSize="20sp"
                        android:textColor="@color/dark_grey" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <net.lucode.hackware.magicindicator.MagicIndicator
                            android:layout_width="match_parent"
                            android:layout_toLeftOf="@+id/iv2"
                            android:id="@+id/magic"
                            android:background="@color/white"
                            android:layout_height="40dp">
                        </net.lucode.hackware.magicindicator.MagicIndicator>
                        <ImageView
                            android:layout_width="1dp"
                            android:id="@+id/iv2"
                            android:layout_toLeftOf="@+id/move"
                            android:layout_height="match_parent"
                            android:background="#ECECEC"/>
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:id="@+id/move"
                            android:paddingLeft="8dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="更多"
                                android:textSize="14sp"
                                android:textColor="#2F2F2F"

                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@mipmap/jiantou_down"
                                android:id="@+id/jiantou"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#ECECEC"
                        android:layout_height="1dp" />
                    <include layout="@layout/fir_tab"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#ECECEC"
                        android:layout_height="1dp" />
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:background="#FEF9F6"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </android.support.design.widget.CoordinatorLayout>

    </com.baoyz.widget.PullRefreshLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="10dp"
        android:id="@+id/vp1"

        android:layout_height="10dp"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="right|bottom"
        android:src="@mipmap/go_top"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:id="@+id/floBtn" />


</RelativeLayout>
