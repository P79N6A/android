<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:padding="@dimen/dp_10"
              android:id="@+id/all"
              android:background="@color/white"
              android:layout_height="145dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/face"
        android:layout_gravity="center_vertical"
        android:layout_width="100dp"
        fresco:roundedCornerRadius="4dp"
        android:layout_height="100dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:padding="@dimen/dp_4">

        <LinearLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:singleLine="true"
                android:text="标题标题标题标题标题标题标题"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/sp_14"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tl"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="6"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/red"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:lines="2"
                            android:padding="@dimen/dp_2"
                            android:text="78"
                            android:textColor="@color/red"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/pich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=".00"
                            android:textColor="@color/red"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@mipmap/line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="5"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/payOld"
                            android:gravity="top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥78.00 "
                            android:textColor="@color/beantxt"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/youhui"
                            android:gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="优惠券 ¥78.00"
                            android:lines="2"
                            android:textColor="@color/dark_grey"
                            android:textSize="12sp"/>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/xl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="已售365件 "
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/beantxt"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"

                    android:layout_weight="5.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_marginRight="13dp"
                        android:background="@mipmap/fanli"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="返"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="#ff6563"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="立即抢购"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:visibility="gone"
                            android:id="@+id/pay"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/gopay" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/bean"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/del"
                    android:src="@mipmap/love1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="移除收藏"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/dark_grey"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>