<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">




<RelativeLayout
    android:layout_width="match_parent"
           android:paddingLeft="@dimen/dp_10"
    android:id="@+id/all"
    android:layout_marginTop="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_6"
    android:layout_height="68dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="40dp"
        android:id="@+id/face"
        android:layout_centerVertical="true"
        fresco:roundAsCircle="true"
        android:layout_height="40dp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="40dp"
       android:layout_margin="@dimen/dp_10"
        android:id="@+id/godImg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/bean2"
        android:text="10:20"
        android:id="@+id/time"
        android:layout_marginTop="@dimen/dp_2"
        android:textSize="10sp"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_toLeftOf="@+id/godImg"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/face"
       android:id="@+id/store"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toLeftOf="@+id/godImg"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李慕生"

                android:textColor="@color/com_name"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 评论了 "
                android:id="@+id/corz"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/com_name"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text= ""
                android:id="@+id/conntent"
                android:textSize="@dimen/sp_12"
                android:lines="1"
                android:textColor="@color/dark_grey"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

   <ImageView
       android:layout_width="10dp"
       android:src="@drawable/zanw"
       android:id="@+id/wei"

       android:layout_height="10dp"

       android:layout_above="@+id/face"
       android:layout_alignStart="@+id/face"/>

</RelativeLayout>






</LinearLayout>