<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shareAll"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.judian.goule.store.activity.ProductDetailsActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/bottomTab"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
      >
        <TextView
            android:layout_width="match_parent"
            android:background="#F3F3F3"
            android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingTop="@dimen/dp_10"
                    android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/share_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_yellow"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/shareTv"
                android:lineSpacingExtra="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/share"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_red"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"/>
        </LinearLayout>
                </LinearLayout>

    </LinearLayout>


    <com.example.ccy.ccyui.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:layout_above="@+id/bottomTab"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
          <RelativeLayout
              android:layout_width="match_parent"

              android:layout_height="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/product"
                        android:layout_centerHorizontal="true"
                        android:layout_width="300dp"
                        android:layout_height="300dp"/>

                </RelativeLayout>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/dp_10"
                      android:layout_marginBottom="@dimen/dp_10"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/tianmao"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:background="@drawable/line_red"
                          android:text="天猫"
                          android:visibility="gone"
                          android:paddingTop="@dimen/dp_2"
                          android:paddingLeft="3dp"
                          android:paddingRight="3dp"
                          android:paddingBottom="@dimen/dp_2"
                          android:textColor="@color/red"
                          android:textSize="10sp"/>

                      <TextView
                          android:id="@+id/taobao"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:background="@drawable/line_red"
                          android:text="淘宝"
                          android:textColor="@color/red"
                          android:textSize="10sp"
                          android:visibility="gone"/>

                      <TextView
                          android:id="@+id/tit"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="5dp"
                          android:layout_marginRight="20dp"
                          android:singleLine="true"
                          android:text="足源地女中筒袜纯棉糖果色棉袜四季款女袜秋冬款纯色运动袜5双装"
                          android:textColor="@color/black"
                          android:textSize="20sp"
                          android:textStyle="bold"/>
                  </LinearLayout>

                  <TextView
                      android:id="@+id/coupon"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="8dp"
                      android:paddingLeft="3dp"
                      android:paddingRight="3dp"
                      android:text="45ddd"
                      android:visibility="gone"
                      android:background="#FD4848"
                      android:padding="3dp"
                      android:textColor="@color/white"
                      android:textSize="14sp"

                      />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="bottom"
                      android:orientation="horizontal"
                      android:paddingBottom="5dp"

                      android:paddingTop="8dp">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:text="优惠价 ¥ "
                          android:textColor="@color/red"
                          android:textSize="14sp"/>

                      <TextView
                          android:id="@+id/price"
                          android:text=""
                          android:textStyle="bold"

                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="2dp"
                          android:textColor="@color/red"
                          android:textSize="20sp"/>
                      <TextView
                          android:id="@+id/priceH"
                          android:text=""
                          android:textStyle="bold"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="2dp"
                          android:textColor="@color/red"
                          android:textSize="12sp"/>


                      <TextView
                          android:id="@+id/reserve_price"
                          android:layout_width="0dp"
                          android:text=""
                          android:textColor="#A7A7A7"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="5dp"
                          android:layout_weight="1"
                          android:textSize="12sp"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="已热销"
                          android:textColor="#A7A7A7"
                          android:textSize="12sp"/>

                      <TextView
                          android:id="@+id/month_sales"
                          android:textColor="#A7A7A7"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="20dp"
                          android:text="笔"
                          android:textColor="#A7A7A7"
                          android:textSize="12sp"/>
                  </LinearLayout>




                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="#DC2543"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:padding="10dp">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="本商品可返 "
                          android:textColor="@color/white"
                          android:textSize="16sp"/>

                      <TextView
                          android:id="@+id/rebate_num"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/white"
                          android:textSize="16sp"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=" 金币 "
                          android:textColor="@color/white"
                          android:textSize="16sp"/>

                      <ImageView
                          android:layout_width="20dp"

                          android:layout_height="20dp"
                          android:src="@mipmap/jinzi"/>
                  </LinearLayout>



                  <LinearLayout
                      android:layout_width="match_parent"
                      android:id="@+id/push"
                      android:orientation="vertical"
                      android:layout_marginBottom="@dimen/dp_10"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="10dp"
                          android:background="#F5F5F5"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@mipmap/tui"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="推荐理由"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />
                        </LinearLayout>


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:paddingLeft="20dp"
                          android:id="@+id/pushInfo"
                          android:paddingRight="20dp"
                          android:textColor="@color/dark_grey"
                          android:textSize="12sp"/>

                  </LinearLayout>


                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="10dp"
                      android:background="#F5F5F5"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20sp"
                          android:layout_marginTop="15dp"

                          android:text="咚咚返小贴士"
                          android:drawableLeft="@mipmap/tui"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          />
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingLeft="20dp"
                              android:id="@+id/tv1"
                              android:paddingRight="20dp"
                              android:lineSpacingExtra="@dimen/dp_6"
                              android:textColor="@color/textcolor"
                              android:textSize="12sp"/>


                      </LinearLayout>


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="20dp"
                          android:id="@+id/tv2"
                          android:paddingRight="20dp"
                          android:lineSpacingExtra="@dimen/dp_6"
                          android:textColor="@color/textcolor"
                          android:textSize="12sp"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:paddingLeft="20dp"
                          android:id="@+id/tv3"
                          android:lineSpacingExtra="@dimen/dp_6"
                          android:paddingRight="20dp"
                          android:textColor="@color/textcolor"
                          android:textSize="12sp"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/tv4"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:lineSpacingExtra="@dimen/dp_6"
                          android:textColor="@color/textcolor"
                          android:textSize="12sp"/>
                  </LinearLayout>

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="10dp"
                      android:layout_marginTop="10dp"
                      android:background="@color/linecolor"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="10dp"
                      android:layout_marginTop="10dp"
                      android:drawableRight="@mipmap/down"
                      android:text="大家正在分享"/>

                  <android.support.v7.widget.RecyclerView
                      android:layout_width="match_parent"
                      android:id="@+id/list"
                      android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>



              </LinearLayout>


          </RelativeLayout>


    </com.example.ccy.ccyui.view.MyScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/tabA"
            app:contentInsetStart="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/back"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_back"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品详情"
                    android:layout_centerVertical="true"
                    android:id="@+id/title"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true" />
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_num1"
                    android:layout_alignParentRight="true"
                    android:layout_height="40dp">
                    <ImageView
                        android:id="@+id/ensure"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/love"/>
                </LinearLayout>

            </RelativeLayout>





        </android.support.v7.widget.Toolbar>

    </RelativeLayout>





</RelativeLayout>
