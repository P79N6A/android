<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/my_collect_item_box_rl"
            android:layout_width="30dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/proxy_tag_de" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_collect_image_view_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/face"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                fresco:roundedCornerRadius="4dp" />

            <TextView
                android:id="@+id/quan"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/face"
                android:background="@drawable/shixinyuan_main_vlayout_xia_daoyuan"
                android:gravity="center"
                android:padding="@dimen/dp_2"
                android:text="领券减0.00"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/my_collect_info_view_ll"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <RelativeLayout
                android:id="@+id/tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:lines="2"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/sp_14" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/shengji_zhuan_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#d61a3e"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#e82e05"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="¥0.00"
                    android:textColor="#EE5246"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/taobao_and_tianmao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/pic"
                    android:text="淘宝价¥2.55"
                    android:textColor="@color/beantxt"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_view"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"/>
</LinearLayout>