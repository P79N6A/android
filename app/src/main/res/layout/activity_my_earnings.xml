<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/ioc_title">

        <RelativeLayout
            android:id="@+id/my_earnings_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="22dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/white_back" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="我的收益"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/my_earnings_earning_rule_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="35dp"
            android:padding="5dp"
            android:text="收益规则"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/isLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="74dp">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/avatar_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                fresco:backgroundImage="@mipmap/head_icon"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/my_earnings_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/my_earnings_name"
                android:background="@drawable/bg_my_member"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6">

                <ImageView
                    android:id="@+id/memberIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/member" />

                <TextView
                    android:id="@+id/memberTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/my_earnings_qr_rl"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ioc_referral_qr" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36dp"
                    android:text="上级推荐码"
                    android:textColor="@color/text_view"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/my_earnings_yqr_yqm_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="36dp"
                    android:layout_toLeftOf="@+id/my_earnings_view1"
                    android:textColor="@color/text_view"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/my_earnings_view1"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/my_earnings_view1"
                    android:text="推荐人"
                    android:textColor="@color/text_view"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/my_earnings_yqr_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="36dp"
                    android:textColor="@color/text_view"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/gray_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="累计收益"
                    android:textColor="@color/text_view"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/my_earnings_leiji_shouyi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/red_text_light"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/my_earnings_account_particulars_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:text="账户明细"
                    android:textColor="@color/text_view"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/rights" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_view" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="114dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="待提现"
                    android:textColor="@color/text_view"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/my_earnings_balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/darkyellow"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/my_earnings_withdraw_deposit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:padding="10dp"
                    android:text="立即提现"
                    android:textColor="@color/text_view"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/my_earnings_withdraw_deposit_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="提现明细"
                    android:textColor="@color/text_view"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/rights" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_view" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="收益报表"
                    android:textColor="@color/text_view"
                    android:textSize="18sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="11dp"
                    android:layout_weight="3"
                    android:background="@color/gray_view">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="预估佣金"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dp"
                        android:text="本月"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/now_month_commission_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:layout_toLeftOf="@+id/my_earnings_view2"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/my_earnings_view2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36dp"
                        android:layout_toRightOf="@+id/my_earnings_view2"
                        android:text="上月"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pre_month_commission_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/gray_view" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dp"
                        android:text="今日"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/today_commission_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:layout_toLeftOf="@+id/my_earnings_view3"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/my_earnings_view3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36dp"
                        android:layout_toRightOf="@+id/my_earnings_view3"
                        android:text="昨日"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/yestoday_commission_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="11dp"
                    android:layout_weight="3"
                    android:background="@color/gray_view">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="团队付款笔数"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dp"
                        android:text="本月"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/now_month_payment_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:layout_toLeftOf="@+id/my_earnings_view4"
                        android:textColor="@color/darkyellow"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/my_earnings_view4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36dp"
                        android:layout_toRightOf="@+id/my_earnings_view4"
                        android:text="上月"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pre_month_payment_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:textColor="@color/darkyellow"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/gray_view" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="28dp"
                        android:text="今日"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/today_payment_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:layout_toLeftOf="@+id/my_earnings_view5"
                        android:textColor="@color/darkyellow"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/my_earnings_view5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36dp"
                        android:layout_toRightOf="@+id/my_earnings_view5"
                        android:text="昨日"
                        android:textColor="@color/text_view"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/yestoday_payment_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36dp"
                        android:text="44笔"
                        android:textColor="@color/darkyellow"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>