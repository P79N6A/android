<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/all"
          android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"

    android:layout_height="74dp">




    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
         android:orientation="horizontal"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="match_parent">
      <ImageView
          android:layout_width="wrap_content"
          android:src="@mipmap/xuanzhong"
          android:id="@+id/dui"
          android:layout_centerVertical="true"
          android:layout_height="wrap_content" />
     <LinearLayout
         android:layout_width="wrap_content"
              android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:gravity="center"
         android:id="@+id/xiug"
         android:layout_marginBottom="@dimen/dp_10"
         android:background="@drawable/bg_xiu"
         android:layout_height="wrap_content">
         <ImageView
             android:layout_width="wrap_content"
             android:src="@mipmap/xiegai"
             android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:text="修改"
                   android:textColor="#000000"
                   android:id="@+id/xiu"
                   android:textSize="11sp"

                   android:layout_height="wrap_content" />
     </LinearLayout>
         <LinearLayout
             android:layout_toRightOf="@+id/dui"
             android:layout_toLeftOf="@+id/xiug"
             android:layout_width="match_parent"
             android:layout_marginTop="@dimen/dp_10"
             android:layout_marginBottom="@dimen/dp_10"
             android:orientation="vertical"
             android:layout_height="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:paddingLeft="@dimen/dp_10"
                  android:paddingRight="@dimen/dp_10"
                  android:orientation="horizontal"
                  android:layout_weight="5"
                  android:layout_height="match_parent">

                  <TextView
                      android:layout_width="wrap_content"
                      android:text="fff"
                      android:id="@+id/name"
                      android:layout_weight="5"
                      android:textColor="@color/main"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:id="@+id/tel"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="5"
                      android:text=""
                      android:textColor="@color/main" />

              </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:gravity="center_vertical"
                 android:paddingLeft="@dimen/dp_10"
                 android:layout_weight="5"
                 android:layout_height="match_parent">
                 <TextView
                     android:layout_width="wrap_content"
                     android:text=""
                     android:textColor="@color/add_txt"
                     android:lines="1"
                     android:id="@+id/area"
                     android:layout_height="wrap_content" />

             </LinearLayout>
         </LinearLayout>



    </RelativeLayout>


<ImageView
    android:layout_width="wrap_content"
    android:src="@mipmap/morendizhi1"
    android:id="@+id/mor"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/bm"
        android:id="@+id/bm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
</RelativeLayout>