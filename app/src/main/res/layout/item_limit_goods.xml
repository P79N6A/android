<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/all"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="horizontal">
<RelativeLayout
    android:layout_width="wrap_content"
      android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/face"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white" />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:id="@+id/video_btn"
        android:background="@mipmap/nim_music_icon_play"
        />


</RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_10"
                android:lines="2"
                android:text="标题标题标题标题标题标题标题"
                android:textColor="@color/dark"
                android:textSize="@dimen/sp_14" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:lines="3"
                    android:textSize="10sp"
                    android:id="@+id/info"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/prcT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="券后： ¥ "
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/prc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="49"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      android:gravity="center"
                      android:layout_height="wrap_content">

                      <TextView
                          android:id="@+id/xl"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          android:padding="@dimen/dp_4"
                          android:text="1000人已买"
                          android:textColor="#AAAAB1"
                          android:textSize="12sp" />
                      <TextView
                          android:layout_width="1dp"
                          android:layout_height="match_parent"
                          android:layout_marginBottom="2dp"
                          android:layout_marginLeft="@dimen/dp_2"
                          android:layout_marginRight="2dp"
                          android:layout_marginTop="2dp"
                          android:background="#AAAAB1" />
                      <TextView
                          android:id="@+id/type"

                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"

                          android:text="天猫"
                          android:textColor="#AAAAB1"
                          android:textSize="@dimen/sp_12" />



                  </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:id="@+id/you"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/image_lingquan_black" />

                    <TextView
                        android:id="@+id/quan"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_goos_quan"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/pu"
                        android:layout_marginTop="@dimen/dp_4"
                        android:gravity="center|right"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:gravity="right"
                            android:textColor="#383838"
                            android:id="@+id/fan"
                            android:visibility="invisible"
                            android:textSize="12sp"
                            android:layout_marginRight="@dimen/dp_4"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享"
                            android:textColor="#383838"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:layout_marginTop="1dp"
                            android:src="@mipmap/share" />


                    </LinearLayout>




                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
     android:layout_width="match_parent"
    android:background="@color/bean"
     android:layout_height="1dp" />
</LinearLayout>