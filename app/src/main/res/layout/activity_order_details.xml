<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/all"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"

              android:orientation="vertical"
    >





        <com.example.ccy.ccyui.view.MyScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll"
            android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:layout_width="match_parent"
            android:id="@+id/banner"
            android:layout_height="200dp">

        </com.bigkoo.convenientbanner.ConvenientBanner>
          <ImageView
              android:layout_width="25dp"
              android:src="@mipmap/zhan1"
              android:id="@+id/love"
              android:layout_alignBottom="@+id/banner"
              android:layout_alignParentRight="true"
              android:layout_marginRight="@dimen/dp_20"
              android:layout_marginBottom="@dimen/sp_10"
              android:layout_height="25dp"/>
    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/touxiang"
        app:riv_border_color="@color/white"
        android:id="@+id/face"
        android:layout_marginLeft="@dimen/sp_10"
        android:layout_centerVertical="true"
        app:riv_border_width="2dp"
        app:riv_oval="true"
        app:riv_tile_mode="repeat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/face"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:text="爽"
            android:layout_marginBottom="4dp"
            android:id="@+id/name"
            android:layout_weight="4"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
           />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_weight="4"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="等级："
        android:textColor="@color/dark_grey"
        android:textSize="9sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

<ImageView
    android:layout_width="wrap_content"
     android:src="@mipmap/crown"
    android:id="@+id/crownIv"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="英勇黄铜"
        android:textColor="@color/dark_grey"
        android:textSize="10sp"
        android:layout_marginLeft="4dp"
        android:id="@+id/crownTv"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

</LinearLayout>

    </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:text="这位小姐共有0条晒单"
          android:textSize="10sp"
          android:layout_marginRight="@dimen/dp_10"
          android:id="@+id/commentInfo"
          android:layout_alignParentRight="true"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/linearLayout"
        />

</RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/baen"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="1dp"/>
<TextView
    android:layout_width="match_parent"
     android:layout_marginTop="15dp"
    android:textSize="16sp"
    android:padding="@dimen/dp_10"
    android:text="标题"
    android:textStyle="bold"
    android:id="@+id/title"
    android:textColor="@color/dark_grey"
    android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="内容"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/sp_14"
                />

            <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:id="@+id/time"
              android:text="10-30 16:30"
              android:textColor="@color/darktgray"
              android:layout_marginBottom="@dimen/dp_10"
              android:layout_marginRight="@dimen/dp_20"
              android:textSize="@dimen/sp_12"
              android:layout_alignParentRight="true"
              android:layout_height="wrap_content"/>

      </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/bean"
        android:layout_height="@dimen/dp_10"/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/comm"
        android:layout_height="40dp">
        <TextView
            android:layout_width="4dp"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/red"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="她晒单的东东"
            android:id="@+id/whoGod"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/dark_grey"
            android:layout_height="wrap_content"/>


    </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/dp_10"
                android:id="@+id/goodsAll"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:fresco="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/gicon"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    fresco:roundedCornerRadius="4dp"
                    android:layout_height="100dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:padding="@dimen/dp_4">

                    <LinearLayout
                        android:id="@+id/tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:singleLine="true"
                            android:text="标题标题标题标题标题标题标题"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/sp_14"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tl"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"

                                android:orientation="horizontal"
                                android:layout_height="match_parent"
                                android:layout_weight="3.6">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_weight="7"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="¥"
                                        android:textColor="@color/red"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:id="@+id/pic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:lines="2"
                                        android:padding="@dimen/dp_2"
                                        android:text="78"
                                        android:textColor="@color/red"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/pich"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=".00"
                                        android:textColor="@color/red"
                                        android:textSize="10sp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"

                                    android:src="@mipmap/line" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_weight="5"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/payOld"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="top"
                                        android:text="¥78.00 "
                                        android:textColor="@color/beantxt"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/youhui"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="bottom"
                                        android:lines="2"
                                        android:text="优惠券 ¥78.00"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="12sp" />
                                </LinearLayout>


                            </LinearLayout>


                            <TextView
                                android:id="@+id/xl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="已售365件 "
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/beantxt"
                                android:textSize="10sp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_2"

                                android:layout_weight="5.5"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:layout_marginRight="15dp"
                                    android:background="@mipmap/fanli"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:id="@+id/tv1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="返4"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:visibility="invisible" />

                                    <TextView
                                        android:id="@+id/info"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="0.00"
                                        android:textColor="#ff6563"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="立即抢购"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:visibility="gone"
                                        android:id="@+id/pay"
                                        android:layout_height="match_parent" />

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@mipmap/gopay" />


                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5" />


                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="12"
                            android:layout_height="match_parent">


                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="@color/bean"
                android:layout_height="@dimen/dp_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"

                android:layout_height="40dp">
                <TextView
                    android:layout_width="4dp"
                    android:layout_marginTop="@dimen/dp_4"
                    android:background="@color/red"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="评论"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/dark_grey"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <com.makeramen.roundedimageview.RoundedImageView
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@mipmap/touxiang"
                  app:riv_border_color="@color/white"
                  android:id="@+id/myFace"
                  android:layout_marginLeft="@dimen/sp_10"
                  android:layout_centerVertical="true"
                  app:riv_border_width="2dp"
                  app:riv_oval="true"
                  app:riv_tile_mode="repeat" />
              <LinearLayout
                  android:layout_marginTop="@dimen/dp_6"
                  android:layout_marginBottom="@dimen/dp_6"
                  android:layout_width="match_parent"
                  android:layout_marginLeft="@dimen/dp_10"
                  android:gravity="center"
                  android:background="@drawable/bg_order"
                  android:layout_marginRight="@dimen/dp_10"
                  android:layout_height="match_parent">
                  <ImageView
                      android:layout_width="wrap_content"
                      android:src="@mipmap/pingbi"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:hint="楼主，我有话对你讲"
                      android:textSize="@dimen/sp_12"
                      android:background="@null"
                      android:id="@+id/send"
                      android:imeOptions="actionSend"
                      android:textColor="@color/hit_txt"
                      android:layout_height="wrap_content"/>



              </LinearLayout>


          </LinearLayout>

          <android.support.v7.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/dp_10"
              android:id="@+id/recy"
              android:layout_height="wrap_content">

          </android.support.v7.widget.RecyclerView>

          <LinearLayout
              android:layout_marginTop="@dimen/dp_10"
              android:layout_width="match_parent"
               android:background="#F2F3F7"
              android:gravity="center_vertical"
               android:orientation="horizontal"
              android:layout_height="40dp">

              <TextView
                  android:layout_width="match_parent"
                           android:layout_weight="5"
                   android:background="@color/biji"
                  android:layout_marginLeft="@dimen/dp_10"
                  android:layout_height="1dp"/>
              <TextView
                  android:layout_width="wrap_content"
                   android:text="她的其他晒单"
                  android:textStyle="bold"
                  android:id="@+id/whoOrder"
                  android:textColor="@color/dark_grey"
                  android:paddingLeft="@dimen/dp_10"
                  android:paddingRight="@dimen/dp_10"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="match_parent"
                           android:layout_weight="5"
                  android:layout_marginRight="@dimen/dp_10"
                   android:background="@color/biji"
                  android:layout_height="1dp"/>




          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#F2F3F7"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recy2"
                    android:padding="5dp"
                    android:background="@color/baen"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>






        </LinearLayout>
        </com.example.ccy.ccyui.view.MyScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bean4"
        android:id="@+id/bottom"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:id="@+id/comment"
                android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/pingl"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/commentNum"
                     android:layout_width="wrap_content"
                      android:text=""
                android:textColor="@color/white"
                     android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="2dp"
            android:background="#626261"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/like"
            android:layout_weight="5"
                android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/dianz"
                android:id="@+id/likeIv"
                android:layout_height="wrap_content"/>
            <TextView
                     android:layout_width="wrap_content"
                      android:text=""
                     android:id="@+id/likeNum"
                     android:textColor="@color/white"
                     android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:background="#626261"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="5"
            android:id="@+id/share"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/order_share"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/commentLl"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="40dp">
<TextView
    android:layout_width="match_parent"
    android:background="@color/hit_txt"
    android:layout_height="2dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_10"
            android:imeOptions="actionSend"
            android:hint="回复点什么吧"
            android:textSize="10sp"
            android:paddingLeft="@dimen/dp_10"
            android:id="@+id/saveConntent"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_commen_ev"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|bottom"
        android:src="@mipmap/go_top"
       android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="60dp"
        android:id="@+id/floBtn" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/tabA"
            app:contentInsetStart="0dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/icon_back"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晒单详情"
                    android:id="@+id/tabTitle"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ensure"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/zhan1"/>
            </RelativeLayout>





        </android.support.v7.widget.Toolbar>

    </RelativeLayout>



</RelativeLayout>
